<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.customlistview.PorMarca">

    <Spinner
        android:id="@+id/cbxMarca"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnBusar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        tools:layout_editor_absoluteX="120dp"
        android:onClick="Buscar"
        tools:layout_editor_absoluteY="121dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/cbxMarca"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="206dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/cbxMarca"
        android:layout_alignEnd="@+id/cbxMarca"
        android:layout_marginTop="174dp" />
</RelativeLayout>
